actions [:create, :add] 

attribute :key_name, :default => "id_rsa"
attribute :data_bag, :required => true
attribute :keypair, :name_attribute => true
attribute :user, :default => "root" 

def initialize(*args)
    if node["platform"] == "centos"
      package "openssh-clients"
    end
    super
    @action = :create
end
